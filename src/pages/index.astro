<style>
    .homepage-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 50px 20px;
        min-height: calc(100vh - 80px); 
        position: relative;
    }

    .main-card {
        display: grid;
        grid-template-columns: 1fr 2fr; 
        gap: 40px;
        align-items: center; /* Centre verticalement le contenu */
        background-color: var(--color-primary-bg, #F8F8F8); 
        padding: 60px;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        max-width: 1000px;
        width: 90%;
        position: relative;
        overflow: hidden; 
    }

    /* --- Styles du bloc Photo --- */
    .header-block {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        border-right: 1px solid #ccc;
        padding-right: 40px;
    }
    
    .profile-frame {
        width: 200px; 
        height: 200px;
        border-radius: 50%;
        border: 5px solid var(--color-accent, #1E90FF); 
        padding: 10px; 
        margin-bottom: 20px;
    }
    
    .profile-picture {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover; 
    }

    .name {
        font-size: 2rem;
        margin: 10px 0;
    }

    /* --- Styles du bloc Texte --- */
    .content-block {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .intro-text {
        line-height: 1.6;
        margin-bottom: 25px;
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .contact-link {
        display: flex;
        align-items: center;
        text-decoration: none;
        color: #333;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .icon {
        margin-right: 10px;
        font-size: 1.2rem;
    }

    .contact-link:hover {
        color: var(--color-accent, #1E90FF);
        text-decoration: underline;
    }

    /* --- D√©corations --- */
    .decorative-circle, .decorative-diamond {
        position: absolute;
        opacity: 0.1; 
        background-color: var(--color-accent, #1E90FF);
        z-index: 0;
    }

    .decorative-circle {
        width: 300px; height: 300px;
        border-radius: 50%;
        top: -150px; right: -100px;
    }
    
    .decorative-diamond {
        width: 150px; height: 150px;
        bottom: -50px; left: -50px;
        transform: rotate(45deg);
    }
    
    /* ********************************************************* */
    /* --- RESPONSIVE : TEXTE EN HAUT / PHOTO EN BAS --- */
    /* ********************************************************* */
    @media (max-width: 768px) {
        .main-card {
            display: flex; 
            flex-direction: column; /* Empilement vertical */
            padding: 40px 20px;
            text-align: center;
        }

        /* Le texte passe en premier (ordre 1) */
        .content-block {
            order: 1; 
            margin-bottom: 40px;
        }

        /* La photo passe en deuxi√®me (ordre 2) */
        .header-block {
            order: 2; 
            border-right: none;
            border-top: 1px solid #ccc; /* Ligne de s√©paration au dessus de la photo */
            padding-right: 0;
            padding-top: 40px;
        }

        .contact-link {
            justify-content: center; /* Centre les ic√¥nes et le texte sur mobile */
        }

        .decorative-circle, .decorative-diamond {
            display: none; 
        }
    }
</style>