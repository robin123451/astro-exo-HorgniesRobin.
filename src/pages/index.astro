<style>
    /* Styles de cette page UNIQUEMENT
    Les styles globaux (polices, couleurs de fond) doivent être dans Layout.astro/global.css 
    */

    /* Mise en page de la page entière (centrage) */
    .homepage-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 50px 20px;
        min-height: calc(100vh - 80px); /* Pour laisser de la place au footer */
        position: relative;
    }

    /* Le bloc principal */
    .main-card {
        display: grid;
        grid-template-columns: 1fr 2fr; /* Layout Desktop : 1/3 pour la photo, 2/3 pour le contenu */
        gap: 40px;
        background-color: var(--color-primary-bg, #9a1313ff); /* Utiliser la couleur de fond du bloc */
        padding: 60px;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        max-width: 1000px;
        width: 90%;
        position: relative;
        overflow: hidden; /* Pour contenir les éléments décoratifs */
    }

    /* --- Styles de la Photo --- */
    .header-block {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        border-right: 1px solid #ccc; /* Séparateur léger */
        padding-right: 40px;
    }
    
    .profile-frame {
        /* Le cadre bleu du Figma */
        width: 200px; 
        height: 200px;
        border-radius: 50%;
        border: 5px solid var(--color-accent, #1E90FF); 
        padding: 10px; /* Espace entre le contour et l'image */
        margin-bottom: 20px;
    }
    
    .profile-picture {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover; /* Assure que l'image remplit le cercle sans déformation */
    }

    .name {
        font-family: 'Montserrat', sans-serif; /* À confirmer */
        font-size: 2.5em;
        margin-top: 0;
    }

    .baseline {
        color: #555;
        font-style: italic;
    }

    /* --- Styles du Contenu --- */
    .content-block h2 {
        margin-top: 10;
        font-size: 1.5em;
    }

    .intro-text {
        line-height: 1.6;
        margin-bottom: 30px;
    }

    .contact-info {
        display: flex;
        flex-direction: column;
    }
    
    .contact-link {
        font-weight: bold;
        color: #333;
        text-decoration: none;
        margin-bottom: 5px;
    }

    /* Style du survol exigé par le professeur */
    .contact-link:hover {
        color: var(--color-accent, #1E90FF);
        text-decoration: underline;
    }

    /* --- Éléments décoratifs (Positionnement absolu) --- */
    .decorative-circle, .decorative-diamond {
        position: absolute;
        opacity: 0.8;
        background-color: var(--color-accent, #0265c8ff);
    }

    .decorative-circle {
        width: 300px;
        height: 300px;
        border-radius: 50%;
        top: -150px;
        right: -100px;
    }
    
    .decorative-diamond {
        width: 150px;
        height: 150px;
        bottom: -50px;
        left: -50px;
        transform: rotate(45deg);
    }
    
    /* --- Contrainte Responsive (Mobile : Colonnes empilées) --- */
    @media (max-width: 768px) {
        .main-card {
            grid-template-columns: 1fr; /* Une seule colonne */
            padding: 30px;
        }

        .header-block {
            border-right: none;
            border-bottom: 1px solid #8ea6a4ff;
            padding-right: 0;
            padding-bottom: 30px;
            margin-bottom: 30px;
        }

        .decorative-circle, .decorative-diamond {
            display: none; /* Cache les éléments décoratifs sur mobile si nécessaire */
        }
    }